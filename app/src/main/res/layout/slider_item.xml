<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/idRLSlider"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_background">

    <!--Image view for displaying
        our slider image-->
    <ImageView
        android:id="@+id/roadIllustration"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#00000000" />
        <!--android:src="@mipmap/ic_launcher" />-->

    <!--text view for displaying our
        slider description-->
    <TextView
        android:id="@+id/idSliderDescription"
        android:layout_width="match_parent"
        android:layout_height="215dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="292dp"
        android:fontFamily="@font/stolzl_medium"
        android:text="InRoad — это приложение, фиксирующее неровности на дорогах"
        app:autoSizeTextType="uniform"
        app:autoSizeMinTextSize="24sp"
        app:autoSizeMaxTextSize="36sp"
        android:gravity="center_horizontal|top"
        android:textColor="@color/white"/>

</RelativeLayout>
